.uploadify {
	position: relative;
	margin-bottom: 3px;
}
.uploadify-button {
	background-color: #F9F0F0;
	background-image: linear-gradient(bottom, #4d90fe 0%, #4d90fe 100%);
	background-image: -o-linear-gradient(bottom, #4d90fe 0%, #4d90fe 100%);
	background-image: -moz-linear-gradient(bottom, #4d90fe 0%, #4d90fe 100%);
	background-image: -webkit-linear-gradient(bottom, #4d90fe 0%, #4d90fe 100%);
	background-image: -ms-linear-gradient(bottom, #4d90fe 0%, #4d90fe 100%);
	background-image: -webkit-gradient(
		linear,
		left bottom,
		left top,
		color-stop(0, #4d90fe),
		color-stop(1, #4d90fe)
	);
	background-position: center top;
	background-repeat: no-repeat;
	-webkit-border-radius: 2px;
	-moz-border-radius: 2px;
	-ms-border-radius: 2px;
	-o-border-radius: 2px;
	border-radius: 5px;
	border: 1px solid #4d90fe;
	color: #fff;
	font:  10px Arial, Helvetica, sans-serif;
	text-align: center;
	text-shadow: 0 2px 2px rgba(0,0,0,0.22); 
	/* width: 100%; */
}
.uploadify:hover .uploadify-button {
	background-color: #0362fd;
	background-image: linear-gradient(top, #0362fd 0%, #0362fd 100%);
	background-image: -o-linear-gradient(top, #0362fd 0%, #0362fd 100%);
	background-image: -moz-linear-gradient(top, #0362fd 0%, #0362fd 100%);
	background-image: -webkit-linear-gradient(top, #0362fd 0%, #0362fd 100%);
	background-image: -ms-linear-gradient(top, #0362fd 0%, #0362fd 100%);
	background-image: -webkit-gradient(
		linear,
		left bottom,
		left top,
		color-stop(0, #0362fd),
		color-stop(1, #0362fd)
	);
	background-position: center bottom;
}
.uploadify-button.disabled {
	background-color: #D0D0D0;
	color: #808080;
}
.uploadify-queue {
	margin-bottom: 1em;
}
.uploadify-queue-item {
	background-color: #F5F5F5;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	font: 11px Verdana, Geneva, sans-serif;
	margin-top: 5px;
	max-width: 350px;
	padding: 10px;
}
.uploadify-error {
	background-color: #FDE5DD !important;
}
.uploadify-queue-item .cancel a {
	background: url('uploadify-cancel.png') 0 0 no-repeat;
	float: right;
	height:	16px;
	text-indent: -9999px;
	width: 16px;
}
.uploadify-queue-item.completed {
	background-color: #E5E5E5;
}
.uploadify-progress {
	background-color: #E5E5E5;
	margin-top: 10px;
	width: 100%;
}
.uploadify-progress-bar {
	background-color: #0099FF;
	height: 3px;
	width: 1px;
}
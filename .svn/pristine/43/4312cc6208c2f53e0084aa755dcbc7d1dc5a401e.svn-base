<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="robots" content="none" />
	<title>客户信息列表</title>
    <link href="../../resources/ligerUI/skins/Gray/css/ligerui-all.css" rel="stylesheet" type="text/css" />	
    <link rel="stylesheet" type="text/css" href="../../resources/ligerUI/skins/ligerui-icons.css"/>
    <link href="../../resources/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="../../resources/css/main.css" rel="stylesheet" type="text/css" />
    <link href="../../resources/css/base.css" rel="stylesheet" type="text/css" />
    <script src="../../resources/js/jquery-1.7.2.min.js" type="text/javascript"></script>
    <script src="../../resources/ligerUI/js/ligerui.all.js" type="text/javascript"></script>
    <script src="customerData.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
			var grid = null;
						
			$(function () {
				grid = $("#maingrid1").ligerGrid({
					toolbar: { items: [
						{ text: '增加', click: itemclick, icon:'add'},
						{ line: true },
						{ text: '修改', click: itemclick, icon: 'modify' },
						{ line: true },
						{ text: '删除', click: itemclick, icon: 'delete' }
					]},
					columns: [
					{ display: '序号', name: 'rowNumber', width: 40, type: 'int' },
					{ display: '名称', name: 'CustomerName', width: 255 },
					{ display: '联系人', name: 'ContactPerson', width: 120}, 
					{ display: '联系电话', name: 'Tel', width: 100 },  
					{ display: '地址', name: 'Address', width: 200 }],  
					checkbox: true,
					pageSize: 10, fixedCellHeight: false,
					data: customerData,
					width: '100%'
				});
			});
			
			// toolbar item click event
			function itemclick(item){
				alert(item.text);
			}
		});
	</script>
</head>
<body>
	<div class="search-wrap" id="searchbar">
		<dl>
			<dd>
				<label class="b-label" for="txt_kw">客户名称：</label>
				<span class="ui-search"><input name="txt_kw" id="txt_Kw" type="text" class="ui-input"></span>
			    <input id="btnOK" type="button" value="搜 索" class="ui-btn">
			</dd>
			<div class="clear"></div>
		</dl>		
	</div>
	<div class="clear ht_10"></div>
    <div id="maingrid1" style="margin:0; padding:0"></div>
    <div style="display:none;"></div>  
</body>
</html>

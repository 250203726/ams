/*-- loading effect styles --*/

/*-- icn_border --*/
.icn-border{position: relative;	vertical-align: text-bottom; display: inline-block;	font-size: 12px; width: 0; height: 0;}

.icn-border.direct-r{border-top: 5px solid transparent;	border-bottom: 5px solid transparent; border-left: 10px solid #999;}
.icn-border.direct-b{border-right: 5px solid transparent;	border-left: 5px solid transparent; border-top: 10px solid #999;}

